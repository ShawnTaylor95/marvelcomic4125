    <link href="css/styles.css" rel="stylesheet">
    <title>Marvel Comics</title>
  </head>
  <div id="wrapper">
  <body>
  <div id ="wrapper">
    <header>
    <h1>Marvel Comics</h1>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Marvel</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/">Home </a>
      <a class="nav-item nav-link active" href="/character">Character<span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="/date">Date</a>
      <a class="nav-item nav-link" href="/random">Random</a>
      <a class="nav-item nav-link" href="/contact">Contact Us</a>
    </div>
  </div>
</nav>
<div class="jumbotron">
  <h1 class="display-4">Marvel Character Search</h1>
<h3>Enter the name of a Marvel character you would like to know more about.</h3>
<form action="/getCharacter" method="POST">
  <div class="form-group">
    <label for="Hero">Enter a Character name</label>
    <input class="form-control" id="heroName" name="heroName" >
  </div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<div id="CharacterResults">
<div class="media">
  <img id="pic"src="<%= info.data.results[0].thumbnail.path+'.'+info.data.results[0].thumbnail.extension%>" class="align-self-start mr-3" alt="Hero" width="25%" height="25%">
  <div class="media-body">
    <h4>Character:</h4>
    <h4><%=info.data.results[0].name%></h4>
    <p>Description: <%= info.data.results[0].description%></p>
    <p>This character is in <%= info.data.results[0].comics.available%> comics.</p>
    </div>
</div>
</div>

<h4>Comic this character is in:</h4>
    

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img id="rollimg"src="<%=comic.data.results[0].thumbnail.path+'.'+comic.data.results[0].thumbnail.extension %>" alt="...">
        <h5><%=comic.data.results[0].title %></h5>
       <p><%=comic.data.results[0].description %></p>
       <p>  </p>
    </div>
<% for(var i=1;i< comic.data.results.length; i++) { %>
    <div class="carousel-item">
      <img id="rollimg" src="<%=comic.data.results[i].thumbnail.path+'.'+comic.data.results[i].thumbnail.extension %>" alt="...">
        <h5><%=comic.data.results[i].title %></h5>  
      <p><%=comic.data.results[i].description %></p>
      <p> </p>
    </div>
 <% } %>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



